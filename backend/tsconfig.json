{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "lib": ["es2020"],  
      "skipLibCheck": true  // for future ref: it is used to tell the compiler to not check the lib files, because it is already checked by the node_modules.
    },
    "include": ["**/*.ts"]
  }
  